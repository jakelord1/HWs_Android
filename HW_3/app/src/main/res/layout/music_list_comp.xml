<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:clipToOutline="true"
        android:src="@drawable/album_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </ImageView>

    <TextView
        android:id="@+id/list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        android:text="dfgdfgdf"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/material_dynamic_primary30"
        app:layout_constraintStart_toEndOf="@id/list_icon"
        app:layout_constraintTop_toTopOf="@id/list_icon"
        app:layout_constraintEnd_toStartOf="@id/list_time"
        />

    <TextView
        android:id="@+id/list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:45"
        android:textColor="@color/material_dynamic_tertiary90"
        android:textSize="18sp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="@id/list_icon"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/list_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sddfgg"
        android:textStyle="italic"
        android:textColor="@color/material_dynamic_secondary30"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/list_icon"
        app:layout_constraintTop_toBottomOf="@id/list_name"
        app:layout_constraintBottom_toBottomOf="@id/list_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>